<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context="com.example.mustafa.exchange.EditActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Update Page"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/itemname"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="Update Item Comment"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/DesiredThing"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="Update Desired Thing"
        android:inputType="textPersonName"


        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/imageView"

        app:layout_constraintStart_toStartOf="@+id/itemname"

        app:layout_constraintTop_toBottomOf="@+id/itemname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942" />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:onClick="chooseImage"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/itemname"
        app:layout_constraintTop_toBottomOf="@+id/itemname"
        app:srcCompat="@drawable/gallery_logo" />


    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_marginBottom="92dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/btn_design_login"
        android:onClick="upload"
        android:text="Update Item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</android.support.constraint.ConstraintLayout>
