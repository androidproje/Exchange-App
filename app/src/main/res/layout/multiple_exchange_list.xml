<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="0dp"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#ffffff"
    android:id="@+id/rootCardView"
    android:background="@xml/list_item_selector">

<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:textColor="#004D40"
    android:text="Size gönderecek kişi"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="115dp"
        >
        <TextView
            android:id="@+id/username_1kişi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:textColor="#4DB6AC"
            android:text="useremail"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingLeft="0dp">

        <ImageView
            android:id="@+id/image_1kişi"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_gravity="fill"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="1.0"
            app:srcCompat="@mipmap/ic_launcher"

            />
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:orientation="vertical"

            >

            <TextView

                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Itemname"
                android:textColor="#000000"
                android:textSize="14dp" />
            <TextView

                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="desired"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textSize="14dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemname_1kişi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:gravity="left"
                android:padding="10dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:text="comment"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/desiredthing"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                android:padding="10dp"
                android:text="desired thing"
                android:textColor="#000000"
                android:textSize="14dp"

                />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#004D40"
        android:layout_marginTop="142dp"
        android:text="Sizin göndereceğiniz kişi"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="260dp"
        >
        <TextView
            android:id="@+id/username_2kişi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:textColor="#4DB6AC"
            android:text="useremail"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="165dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingLeft="0dp">

        <ImageView
            android:id="@+id/imageView_2kişi"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_gravity="fill"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="1.0"
            app:srcCompat="@mipmap/ic_launcher"

            />
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:orientation="vertical"

            >

            <TextView

                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Itemname"
                android:textColor="#000000"
                android:textSize="14dp" />
            <TextView

                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="desired"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textSize="14dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemname_2kişi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:gravity="left"
                android:padding="10dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:text="comment"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/desiredthing1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                android:padding="10dp"
                android:text="desired thing"
                android:textColor="#000000"
                android:textSize="14dp"

                />
        </LinearLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>